<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/noti_layout"
    android:paddingRight="30dp"
    >
    <ImageView android:id="@+id/notif_image"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp" />

    <TextView android:id="@+id/notif_title"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_toRightOf="@id/notif_image" />
    <TextView android:id="@+id/notif_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:textSize="15sp"
        android:layout_toRightOf="@id/notif_image"
        android:layout_below="@id/notif_title" />
</RelativeLayout>